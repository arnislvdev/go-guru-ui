# GuruUI Settings Example
# Copy this file to ~/.guruui.yaml and change what you need

# AI Service Settings
ai:
  provider: "openai"  # Choose: openai, anthropic
  api_key: "your-api-key-here"  # Put your OpenAI API key here
  model: "gpt-4"  # Which AI model to use
  max_tokens: 1000  # How long the AI response can be

# Basic Settings
default_mode: "professional"  # Choose: professional, wtf
verbose: false  # Turn on detailed logging

# How Things Look
output:
  colors: true  # Turn on colored text
  emojis: true  # Turn on emojis in funny mode
  max_width: 80  # How wide the text can be

# Error Understanding
errors:
  languages: ["go"]  # Which programming languages to support
  include_stack_trace: false  # Include stack traces when possible
  
# Command Help
commands:
  platforms: ["linux", "macos", "windows"]  # Which operating systems to support
  include_examples: true  # Include usage examples
  suggest_alternatives: true  # Suggest other commands you could use
